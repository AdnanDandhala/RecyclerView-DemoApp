<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_img_receiver"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/businessman1" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_message_receiver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/round_border"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:minLines="1"
        android:nestedScrollingEnabled="true"
        android:padding="10dp"
        android:text="@string/testing_text"
        android:textColor="@color/toolbar_color"
        android:textSize="15sp"
        app:layout_constrainedHeight="false"
        app:layout_constraintBottom_toBottomOf="@+id/cardView_img_receiver"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toEndOf="@+id/cardView_img_receiver"
        app:layout_constraintTop_toTopOf="@+id/cardView_img_receiver" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tv_message_receiver,tv_message_sender"
        tools:layout_editor_absoluteX="355dp"
        tools:layout_editor_absoluteY="139dp" />

    <TextView
        android:id="@+id/tv_message_sender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/message_border_bg"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:padding="10dp"
        android:text="@string/testing_text"
        android:textColor="@color/recyclerview_background"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_message_receiver" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_img_sender"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_message_sender"
        app:layout_constraintTop_toTopOf="@+id/tv_message_sender">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/businessman1" />

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tv_message_receiver,tv_message_sender"
        tools:layout_editor_absoluteY="178dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="355dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="134dp" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tv_message_receiver"
        tools:layout_editor_absoluteY="178dp" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barriers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tv_message_sender"
        tools:layout_editor_absoluteY="178dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="86dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
